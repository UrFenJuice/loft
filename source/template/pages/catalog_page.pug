							a.bx_catalog_tile_img(href='', style="background-image:url('assets/img/sections/section-5.png');")
								h3.bx_catalog_tile_title Аккумуляторы
						li
							a.bx_catalog_tile_img(href='', style="background-image:url('assets/img/sections/section-6.png');")
								h3.bx_catalog_tile_title Антикоры, шпатлевки
